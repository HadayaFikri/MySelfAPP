<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:padding="32dp">

    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        android:translationZ="12dp"> <ImageView
        android:id="@+id/walkthrough_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/d6"
        android:scaleType="centerInside" android:contentDescription="Welcome Icon"
        android:padding="16dp" /> </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/walkthrough_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="@string/myapp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#263238"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:shadowColor="#30000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <TextView
        android:id="@+id/walkthrough_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/diri"
        android:textSize="16sp"
        android:textColor="#263238"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:shadowColor="#20000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

    <TextView
        android:id="@+id/walkthrough_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/aku"
        android:textSize="15sp"
        android:textColor="#263238"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:shadowColor="#10000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1" />

</LinearLayout>